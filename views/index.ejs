<% include ./partials/header %>

<div class="ui container">
    <h1>My Index</h1>
    
    <div class="ui items">
    <% blogs.forEach(function(blog){ %>
    <div class="ui divider"></div>
        <div class="item">
            <div class="ui tiny image">
                <img src="<%= blog.image %>">
            </div>
            <div class="middle aligned content">
                <div class="ui label">
                    Posted 
                    <div class="detail"><%= blog.date.toDateString() %></div>
                </div>
                <a class="header"><%= blog.title %></a>
                <p class="content"><%- blog.text.substring(0,100) %>...</p>
                <div class="meta">
                    <button class="ui teal button"><a href="/blogs/<%= blog.id %>">Read more</a></button>
                </div>
            </div>
        </div>
    <% }) %>
    <div class="ui divider"></div>
    </div>
</div>
<% include ./partials/footer %>